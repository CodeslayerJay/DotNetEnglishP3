@using P3AddNewFunctionalityDotNetCore.Models.ViewModels
@model IEnumerable<P3AddNewFunctionalityDotNetCore.Models.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = Localizer["ProductAdministrationModule"];
    Layout = "_AdminLayout";
}

<br />
<div id="panel-body">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Product">@Localizer["Create"]</a>
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>
                    <label>@Localizer["Name"]</label>
                </th>
                <th>
                    <label>@Localizer["Description"]</label>
                </th>
                <th>
                    <label>@Localizer["Price"]</label>
                </th>
                <th>
                    <label>@Localizer["Stock"]</label>
                </th>
                <th>
                    <label>@Localizer["Details"]</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductViewModel p in Model)
            {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td style="text-align:center">@double.Parse(p.Price).ToString("c")</td>
                <td style="text-align:center">@p.Stock</td>
                <td>@p.Details</td>
                <td>
                    <a asp-controller="Product" asp-action="ConfirmDelete" asp-route-id="@p.Id" class="btn btn-danger">
                        @Localizer["Delete"]
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
